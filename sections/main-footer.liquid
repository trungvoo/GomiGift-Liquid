<footer>
    <div class="main-footer">
        <div class="container main-footer-wrap">
            <div class="main-footer-wrap-logo">
                <img class="img-fluid" src="{{ 'web_homepage_logo.png' | asset_url }}" alt="">
                <span>{{ section.settings.title }}</span>
            </div>
            <div class="row main-footer-wrap-content">
                <div class="col-lg-6 main-footer-wrap-content-about-us">
                    {{ section.settings.desc }}
                </div>
                <div class="col-lg-6 main-footer-wrap-content-info">
                    <div class="footer-wrap-content-info__address">
                        <img src="{{ 'icon_home.png' | asset_url }}" alt="">
                        <span>
                            {{ section.settings.address }}
                        </span>
                    </div>
                    <div class="footer-wrap-content-info__hotline">
                        <div class="footer-wrap-content-info__hotline-phone">
                            <img src="{{ 'icon_phone.png' | asset_url }}" alt="">
                            <span>HOTLINE: <a href="tel:{{ section.settings.hotline-value }}">{{ section.settings.hotline-text }}</a></span>
                        </div>
                        <div class="footer-wrap-content-info__hotline-mail">
                            <img src="{{ 'icon_email.png' | asset_url }}" alt="">
                            <span>Email: {{ section.settings.email }}</span>
                        </div>
                    </div>
                    <div class="footer-wrap-content-info__social">
                        <a href="">
                            <img src="{{ 'web_homepage_icon_ft04.png' | asset_url }}" alt="">
                        </a>
                        <a href="">
                            <img src="{{ 'web_homepage_icon_ft05.png' | asset_url }}" alt="">
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="scripts">
        <script src="https://code.jquery.com/jquery-3.7.1.min.js"
            integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>
        <script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
        <script src="{{ 'main.js' | asset_url }}" defer="defer"></script>
    </div>
</footer>

{% schema %}
{
    "name": "Main Footer",
    "tag": "section",
    "class": "section",
    "settings": [
        {
            "type": "inline_richtext",
            "id": "title",
            "label": "Title Bottom"
        },
        {
            "type": "inline_richtext",
            "id": "desc",
            "label": "Description Bottom"
        },
        {
            "type": "inline_richtext",
            "id": "address",
            "label": "Address Bottom"
        },
        {
            "type": "inline_richtext",
            "id": "hotline-text",
            "label": "Hotline Text Bottom"
        },
        {
            "type": "inline_richtext",
            "id": "hotline-value",
            "label": "Hotline Value Bottom"
        },
        {
            "type": "inline_richtext",
            "id": "email",
            "label": "Email Bottom"
        }
    ]
}
{% endschema %}